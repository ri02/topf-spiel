<div class="container">

  <div class="head">
    <h1>SPIELÃœBERSICHT</h1>
    <p>Hallo Spieler   von <%= @game.name%>! Hier warten bis ihr an der Reihe seid</p>
  </div>



      <div data-controller="counter" >
        <div class="box ">
         <p><strong data-target="counter.check"></strong></p>
        </div>
        <div class="box">
          <p><strong>Aktuelle Spielrunde: </strong></p>
          <p><strong data-target="counter.round"><%= @game_round_description %></strong></p>
        </div>
        <div class="box">
          <p>Bergiffe noch im Topf</p>
          <% if  @words_left != nil %>
            <p ><strong data-target="counter.count"><%= @words_left.count %></strong><strong>/<%=(@game.number * @game.players)%></strong></p>
          <% else %>
            <p><strong>0</strong></p>
          <% end %>
        </div>

        <div class="box">
          <p>Punkte Gruppe A</p>
          <p><strong data-target="counter.count_a"><%= @game.counter_a %></strong></p>
        </div>
        <div class="box">
          <p>Punkte Gruppe B</p>
          <p><strong data-target="counter.count_b"><%= @game.counter_b %></strong></p>
        </div>


        <%= simple_form_for [@game] do |f| %>
            <%= f.input :groupname,  :input_html => { :value => "a"}, as: :hidden%>
            <%= f.submit 'Gruppe A spielt', class: 'button' %>
          <% end %>

         <%= simple_form_for [@game] do |f| %>
            <%= f.input :groupname , :input_html => { :value => "b"}, as: :hidden%>
            <%= f.submit 'Gruppe B spielt',class: 'button' %>
          <% end %>

      </div>



    <div class='next'>
      <%= link_to root_path(@game) do %>
         <p>Neues Spiel erstellen</p>
      <% end %>
    </div>



</div>







